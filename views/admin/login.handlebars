<div class="container" style="max-width: 480px;">
  <div class="card shadow-sm my-5">
    <div class="card-body">
      <h1 class="h3 mb-3 text-center">Admin Sign In</h1>
      {{#unless adminConfigured}}
        <div class="alert alert-warning">
          Admin credentials are not configured yet. Set <code>ADMIN_EMAIL</code> and <code>ADMIN_PASSWORD_HASH</code> in your environment.
        </div>
      {{/unless}}
      <form method="POST" action="/admin/login" autocomplete="off">
        {{#if returnTo}}
          <input type="hidden" name="returnTo" value="{{returnTo}}">
        {{/if}}
        <div class="mb-3">
          <label for="admin-email" class="form-label">Email</label>
          <input type="email" class="form-control" id="admin-email" name="email" placeholder="Enter admin email" required autofocus>
        </div>
        <div class="mb-3">
          <label for="admin-password" class="form-label">Password</label>
          <input type="password" class="form-control" id="admin-password" name="password" placeholder="Enter password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign In</button>
      </form>
    </div>
  </div>
</div>
