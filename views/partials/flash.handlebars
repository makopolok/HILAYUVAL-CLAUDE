<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1080;">
  {{#each flash.success}}
    <div class="toast align-items-center text-bg-success border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4000">
      <div class="d-flex">
        <div class="toast-body">{{this}}</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  {{/each}}
  {{#each flash.error}}
    <div class="toast align-items-center text-bg-danger border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="6000">
      <div class="d-flex">
        <div class="toast-body">{{this}}</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  {{/each}}
  {{#each flash.info}}
    <div class="toast align-items-center text-bg-info border-0 mb-2" role="alert" aria-live="polite" aria-atomic="true" data-bs-delay="4000">
      <div class="d-flex">
        <div class="toast-body">{{this}}</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  {{/each}}
</div>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const els = document.querySelectorAll('.toast');
    els.forEach(el => new bootstrap.Toast(el).show());
  });
</script>
