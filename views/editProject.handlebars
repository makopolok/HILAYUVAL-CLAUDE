{{!-- views/editProject.handlebars --}}
{{! Edit Project: Add new roles }}
{{> header}}
<div class="container mt-4">
  <div class="d-flex align-items-center mb-3">
    <a href="/projects" class="btn btn-sm btn-outline-secondary me-2">
      <i class="fas fa-arrow-left me-1"></i> Back
    </a>
    <h2 class="mb-0">Edit Project: {{project.name}}</h2>
  </div>
  {{#if project.description}}
    <p class="text-muted mb-4">{{project.description}}</p>
  {{/if}}

  {{#if message}}
    <div class="alert alert-info">{{message}}</div>
  {{/if}}

  <div class="row g-4">
    <div class="col-12 col-lg-7">
      <div class="card shadow-sm border-danger audition-role-card">
        <div class="card-header bg-danger text-white">Current Roles</div>
        <div class="card-body p-0">
          {{#if project.roles.length}}
            <ul class="list-group list-group-flush">
              {{#each project.roles}}
                <li class="list-group-item">
                  <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
                    <div class="d-flex align-items-center gap-2">
                      <i class="fas fa-user-tag text-danger"></i>
                      <span class="fw-semibold">{{this.name}}</span>
                      {{#if this.playlist_id}}
                        <span class="badge bg-secondary">Playlist: {{this.playlist_id}}</span>
                      {{/if}}
                    </div>
                    <div class="d-flex align-items-center gap-2">
                      <form class="d-flex align-items-center gap-2" method="POST" action="/projects/{{../project.id}}/roles/{{this.id}}/rename">
                        <input type="text" name="newName" class="form-control form-control-sm" placeholder="Rename" style="max-width: 180px;">
                        <button class="btn btn-sm btn-outline-primary" type="submit">Rename</button>
                      </form>
                      <form method="POST" action="/projects/{{../project.id}}/roles/{{this.id}}/delete" onsubmit="return confirm('Move role &quot;{{this.name}}&quot; to Trash?');">
                        <button class="btn btn-sm btn-outline-danger" type="submit">Move to Trash</button>
                      </form>
                    </div>
                  </div>
                </li>
              {{/each}}
            </ul>
          {{else}}
            <div class="p-3 text-muted">No roles yet.</div>
          {{/if}}
        </div>
      </div>

      {{!-- Trash section --}}
      {{#if deletedRoles.length}}
      <div class="card shadow-sm mt-4">
        <div class="card-header bg-light d-flex align-items-center justify-content-between">
          <span><i class="fas fa-trash-alt me-2"></i>Trash</span>
          <small class="text-muted">Recently deleted roles</small>
        </div>
        <div class="card-body p-0">
          <ul class="list-group list-group-flush">
            {{#each deletedRoles}}
              <li class="list-group-item">
                <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
                  <div class="d-flex flex-column">
                    <span class="text-decoration-line-through">{{this.name}}</span>
                    {{#if this.deleted_at}}
                      <small class="text-muted">Deleted at {{this.deleted_at}}</small>
                    {{/if}}
                  </div>
                  <div class="d-flex align-items-center gap-2">
                    <form method="POST" action="/projects/{{../project.id}}/roles/{{this.id}}/restore">
                      <button class="btn btn-sm btn-outline-success" type="submit">Restore</button>
                    </form>
                    <form method="POST" action="/projects/{{../project.id}}/roles/{{this.id}}/purge" onsubmit="return confirm('Permanently delete role &quot;{{this.name}}&quot;? This cannot be undone.');">
                      <button class="btn btn-sm btn-outline-secondary" type="submit">Purge</button>
                    </form>
                  </div>
                </div>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
      {{/if}}

    </div>
    <div class="col-12 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-header bg-light">Add New Role</div>
        <div class="card-body">
          <form method="POST" action="/projects/{{project.id}}/add-role" class="needs-validation" novalidate>
            <label for="newRole" class="form-label">Role Name</label>
            <div class="input-group mb-2">
              <span class="input-group-text"><i class="fas fa-plus"></i></span>
              <input type="text" class="form-control" id="newRole" name="newRole" placeholder="e.g., Lead, Supporting, Guest" required>
            </div>
            <div class="d-flex justify-content-start gap-2">
              <button type="submit" class="btn btn-danger">Add Role</button>
              <a href="/projects" class="btn btn-outline-secondary">Back to Projects</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{> footer}}
